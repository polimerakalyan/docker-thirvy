pipeline {
    agent any

    environment {
        IMAGE_NAME = 'myapp:latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(env.IMAGE_NAME)
                }
            }
        }

        stage('Scan with Trivy') {
            steps {
                script {
                    sh '''
                    # Ensure Trivy DB is updated
                    trivy image --skip-update --no-progress ${IMAGE_NAME} > trivy-report.txt || true

                    echo "=== Trivy Scan Report ==="
                    cat trivy-report.txt
                    '''
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'trivy-report.txt', onlyIfSuccessful: false
        }
    }
}
